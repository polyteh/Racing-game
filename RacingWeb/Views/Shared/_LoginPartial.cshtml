@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    //TODO clenup here
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", ReturnUrl = this.Request.RawUrl }))
    {
        <input type="hidden" name="ReturnUrl" value="@this.Request.RawUrl" />
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item active">
                <a class="nav-link">@User.Identity.Name</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                @*<a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>*@
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
        </li>
    </ul>
}