
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Styles/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
</head>

<body>
    <h2>Racing car manager</h2>
    <div style="width:90%; margin:0 auto" class="tablecontainer">
        <a class="popup btn btn-primary" href="/racingcar/save/0" style="margin-bottom:20px; margin-top:20px;">Add new racing car</a>
        <table id="suspectionList" class="table table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brake</th>
                    <th>Engine</th>
                    <th>Suspention</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Brake</th>
                    <th>Engine</th>
                    <th>Suspention</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
</body>

</html>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>


<script>
    jQuery(document).ready(function ($) {
        $.noConflict()
        var oTable = $('#suspectionList').DataTable({
            "ajax": {
                "url": '/RacingCar/GetCars',
                "type": "get",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name", "autoWidth": true },
                {
                    "data": "Brake", "autoWidth": true, "render": function (data) {
                        return data.Name;
                    }
                },
                {
                    "data": "Engine", "autoWidth": true, "render": function (data) {
                        return data.Name;
                    }
                },
                {
                    "data": "Suspention", "autoWidth": true, "render": function (data) {
                        return data.Name;
                    }
                },
                {
                    "data": "Id", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/racingcar/save/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "Id", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/racingcar/delete/' + data + '">Delete</a>';
                    }
                }
            ]
        })
        $('.tablecontainer').on('click', 'a.popup', function (e) {
            e.preventDefault();
            OpenPopup($(this).attr('href'), $(this).text());
        })
        function OpenPopup(pageUrl, action) {
            var $pageContent = $('<div/>');
            $pageContent.load(pageUrl, function () {
                $('#popupForm', $pageContent).removeData('validator');
                $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                $.validator.unobtrusive.parse('form');
            });

            $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                .html($pageContent)
                .dialog({
                    draggable: false,
                    autoOpen: false,
                    resizable: false,
                    model: true,
                    title: action,
                    height: 550,
                    width: 700,
                    close: function () {
                        $dialog.dialog('destroy').remove();
                    }
                })

            $('.popupWindow').on('submit', '#popupForm', function (e) {
                var url = $('#popupForm')[0].action;
                $.ajax({
                    type: "POST",
                    url: url,
                    data: $('#popupForm').serialize(),
                    success: function (data) {
                        if (data.status) {
                            $dialog.dialog('close');
                            oTable.ajax.reload();
                        }
                        else {
                            if (action == 'Delete') {
                                alert("Can't delete item, because it has dependencies");
                            }

                        }
                    }
                })
                e.preventDefault();
            })

            $dialog.dialog('open');
        }
    })
</script>