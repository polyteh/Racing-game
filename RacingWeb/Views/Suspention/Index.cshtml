
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="~/Styles/jquery.dataTables.min.css">
</head>

<body>
    <h2>Race results</h2>
    <table id="suspectionList" class="table table-striped " style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>RigidityKoef</th>
                <th>Manufacurer</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>RigidityKoef</th>
                <th>Manufacurer</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </tfoot>
    </table>
</body>

</html>

<script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $.noConflict()
        var oTable = $('#suspectionList').dataTable({
            "ajax": {
                "url": '/Suspention/GetSuspentions',
                "type": "get",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name", "autoWidth": true },
                { "data": "RigidityKoef", "autoWidth": true },
                { "data": "Manufacurer", "autoWidth": true },
                { "data": "Price", "autoWidth": true },
                {
                    "data": "Id", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/home/save/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "Id", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/home/delete/' + data + '">Delete</a>';
                    }
                }
            ]
        })
    })
</script>